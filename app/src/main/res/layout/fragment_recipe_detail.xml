<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_ingredients"
            style="@style/recipe_detail_sectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ingredient_list_title"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_ingredients"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_ingredients" />

        <TextView
            android:id="@+id/textView_steps"
            style="@style/recipe_detail_sectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/step_list_title"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView_ingredients" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_steps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_steps" />
    </android.support.constraint.ConstraintLayout>
</layout>